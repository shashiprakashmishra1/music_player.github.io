<h2>Search Tracks</h2>
<form action="/tracks" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Name</label>
            <input type="text" name="track_title" value="<% searchOptions.track_title %>">
        </div>
        <div class="form-item">
            <label>Artist</label>
            <input type="text" name="artist_name" value="<% searchOptions.artist_name %>">
        </div>
        <div class="form-item">
            <label>Genre</label>
            <input type="text" name="track_genres" value="<% searchOptions.track_genres %>">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Search</button>
</form>
<br>
<div>
    <% tracks.forEach(track => { %>
        <div><%= track.track_title %> by <%= track.artist_name %></div>
        <div class="btn-row">
            <a class="btn btn-primary" href="/tracks/<%= track.id %>">View</a>
        </div>
    <% }) %>
</div>
