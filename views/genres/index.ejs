<h2>Search Genres</h2>
<form action="/genres" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Name</label>
            <input type="text" name="title" value="<% searchOptions.title %>">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Search</button>
</form>
<br>
<% genres.forEach(genre => { %>
    <div><%= genre.title %></div>
<% }) %>